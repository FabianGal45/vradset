<div class="container text-center">
  <h2>Log in</h2>
  <div class="row justify-content-center row-cols-1 g-3 row-cols-md-2 row-cols-xl-3">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-check mb-3 d-flex justify-content-center">
            <%= f.check_box :remember_me, class:"form-check-input me-3" %>
            <%= f.label :remember_me, class:"form-check-label" %>
          </div>
        <% end %>

        <div class="actions mb-5">
          <%= f.submit "Log in", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>  

  <%= render "devise/shared/links" %>
</div>
